extends ../layout/layout

block head-title
  title Upload - #{appName}

block content

  .section.page-title
    h1 Upload

  if !ticketCount
    .section
      | !{ticketMax} images a day.
      br
      | You can upload #{hours} hours later.

  else
    script.
      $(function() {
        imagel.initNew();
      });

    .section
      form.main
        .sub-section
          .form-group
            label.control-label Image
            input.form-control(type='file', name='files', accept='image/*', multiple='multiple')
            p.help-block
              | You can upload #{ticketCount} more images today.
              br
              if appNamel == 'drypot'
                | Only SVG files.
          .form-group
            label.control-label Comment
            textarea.form-control(name='comment', rows=7)
        .sub-section
          button.btn.btn-primary(name='send', data-loading-text='Sending') Upload

    .section
      | You must be copyright owner.
      br
      | IE 10 or above required.
      br
      if appNamel == 'rapixel'
        | Image must be larger than 3840x2160 pixels.
        br
        | Image will be cropped to 16:9 automatically.
        br
        | Recommended sizes are 5120x2880 or 3840x2160.
        br
        | Max file size is 10MB.
        br
