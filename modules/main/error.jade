extends ../layout/layout

block title
  title Error - #{appName}

block content

  .page-title
    h1 Error

  .section
    .sub-section
      if err.message
        | #{err.message}
      else
        | Unknown Error

    .sub-section
      pre.error-report
        if err.code
          | #{'Code: ' + err.code}
          br
        if err.stack
          | !{err.stack.replace(/\n/g, '<br>')}
