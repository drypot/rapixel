	body
		// navbar
		.navbar.navbar-fixed-top
			.container
				if role
					button.navbar-toggle(type="button", data-toggle="collapse", data-target=".navbar-responsive-collapse")
						span.icon-bar
						span.icon-bar
						span.icon-bar
					a.navbar-brand(href="/threads")= siteTitle
					.nav-collapse.collapse.navbar-responsive-collapse
						form.navbar-form.pull-right
							input(type="text", style="width:200px", placeholder="Search")
							button.btn(onclick="session.logout(); return false;") Logout
							button.btn.btn-primary(onclick="location='/thread/new?c=!{category.id}'; return false;") New

				else
					a.navbar-brand(href="/")= siteTitle

		.container
			if role
				.well.well-small
					ul.list-inline(style="margin: 5px")
						for c in role.categoriesForMenu
							if c.id === 0
								li: a(href="/threads") #{c.name}
							else
								li: a(href="/threads?c=" + c.id) #{c.name}

			block content

