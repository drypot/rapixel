extends layout

block title
	title Photos - #{appName}

block content
	script
		init.add(function () {
			session.initProfile();
		});

	.side-space
		if firstPage
			.page-header
				h2 #{tuser.name}
			.profile
				.profile-text.
					!{jade.escape(tuser.profile).replace(/.*/g, "<h4>$&</h4>")}
				if showActions
					.profile-actions
						a.btn.btn-mini.btn-primary(href='/users/' + tuser._id + '/edit') Edit Profile

	if photos.length
		.photos
			for photo in photos
				.photo
					.img
						a(href='/photos/' + photo._id)
							img(src=photo.dir + '/' + photo._id + '-320.jpg')
					.info
						span
							a(href='/users/' + tuser._id) #{tuser.name}
						span hit !{photo.hit}
						span !{photo.cdateStr}

		.side-space
			include pager
