extends layout

block title
	title Deactivate My Account - #{appName}

block content
	script
		init.add(function () {
			userl.initDeactivate();
		});

	.side-space
		.page-header
			h1 Deactivate My Account

		p.card
			| YOU CAN NOT LOGIN AGAIN.
			br
			| PHOTOS ARE NOT DELETED AUTOMATICALLY.
			br
			| DELETE YOUR PHOTOS FIRST.

		.btns
			button#dea-btn.btn.btn-danger Deactivate My Account
			button#dea-confirm-btn.btn.btn-danger.hide Yes, Deactivate